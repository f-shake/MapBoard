<local:UserControlBase
    x:Class="MapBoard.UI.LayerListPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:compoment="clr-namespace:MapBoard.UI.Compoment"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MapBoard.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    mc:Ignorable="d">

    <Grid>
        <ListView
            x:Name="dataGrid"
            PreviewMouseRightButtonDown="Lvw_PreviewMouseRightButtonDown"
            PreviewMouseRightButtonUp="ListItemPreviewMouseRightButtonUp"
            SelectionChanged="SelectedLayerChanged"
            SelectionMode="Extended">
            <ListBox.ItemContainerStyle>
                <Style BasedOn="{StaticResource {x:Type ListBoxItem}}" TargetType="{x:Type ListBoxItem}">
                    <Setter Property="DockPanel.Dock" Value="Bottom" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel LastChildFill="False" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="8,-4" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="128" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="70" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="0" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <CheckBox
                            Grid.RowSpan="99"
                            VerticalAlignment="Center"
                            FocusVisualStyle="{x:Null}"
                            IsChecked="{Binding Path=LayerVisible, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{Binding Name, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis" />
                        <ui:SimpleStackPanel
                            Grid.Column="4" Height="24"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{Binding Group}" />
                            <Button
                                Margin="0,0,-8,0" Padding="8,0"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0" Content="…"
                                ToolTip="组名">
                                <ui:FlyoutService.Flyout>
                                    <ui:Flyout>
                                        <TextBox
                                            Width="128"
                                            ui:ControlHelper.PlaceholderText="请输入组名"
                                            Text="{Binding Group}" />
                                    </ui:Flyout>
                                </ui:FlyoutService.Flyout>
                            </Button>

                        </ui:SimpleStackPanel>
                        <TextBlock
                            Grid.Row="2" Grid.Column="2"
                            Opacity="0.75"
                            Text="{Binding GeometryType, Converter={StaticResource gtdc}}" />
                        <TextBlock
                            Grid.Row="2" Grid.Column="4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Opacity="0.75">
                            <Run Text="{Binding NumberOfFeatures, Mode=OneWay}" />
                            <Run>个图形</Run>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</local:UserControlBase>