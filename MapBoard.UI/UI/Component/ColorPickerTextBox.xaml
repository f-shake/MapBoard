<UserControl
    x:Class="MapBoard.UI.Compoment.ColorPickerTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MapBoard.UI.Compoment"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox
            x:Name="txt"
            HorizontalAlignment="Stretch"
            LostKeyboardFocus="txt_LostKeyboardFocus"
            Text="{Binding CurrentColor, ElementName=colorPicker, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
        <local:ColorPicker
            x:Name="colorPicker"
            Grid.Column="2"
            Width="16"
            Height="16"
            VerticalAlignment="Center"
            SelectionColorChanged="colorPicker_SelectionColorChanged" />
    </Grid>
</UserControl>