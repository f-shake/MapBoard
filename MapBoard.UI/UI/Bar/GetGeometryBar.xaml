<local:BarBase
    x:Class="MapBoard.UI.Bar.GetGeometryBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MapBoard.UI.Bar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        x:Name="grd"
        Margin="4,0">
        <Grid.Resources>
            <ResourceDictionary Source="BarStyles.xaml" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Column="0"
            VerticalAlignment="Center"
            FontSize="16"
            FontWeight="Bold"
            Text="正在选取" />
        <Button
            Grid.Column="2"
            Click="OkButton_Click"
            Style="{StaticResource barButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <ContentControl
                    Width="14"
                    Content="{StaticResource OkIcon}" />
                <TextBlock
                    Margin="4,0,0,0"
                    VerticalAlignment="Center">
                    完成
                </TextBlock>
            </StackPanel>
        </Button>
        <Button
            Grid.Column="4"
            Click="CancelButton_Click"
            Style="{StaticResource barButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <ContentControl
                    Width="14"
                    Content="{StaticResource CancelIcon}" />
                <TextBlock
                    Margin="4,0,0,0"
                    VerticalAlignment="Center">
                    取消
                </TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</local:BarBase>