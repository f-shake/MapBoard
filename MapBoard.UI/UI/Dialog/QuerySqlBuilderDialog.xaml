<commondialog:CommonDialog
    x:Class="MapBoard.UI.Dialog.QuerySqlBuilderDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commondialog="clr-namespace:ModernWpf.FzExtension.CommonDialog;assembly=ModernWpf.FzExtension"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MapBoard.UI.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="构建查询条件"
    CloseButtonText="取消"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    PrimaryButtonText="确定"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel
            MinWidth="600"
            Margin="8">
            <!--  条件列表  -->
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  第一行的WHERE标签  -->
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="WHERE"
                                Visibility="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.Items.IndexOf(.), Converter={x:Static ui:Converters.EqualToVisibility}, ConverterParameter=0}" />

                            <!--  非第一行的逻辑运算符  -->
                            <ComboBox
                                Grid.Column="0"
                                SelectedItem="{Binding LogicalOperator}"
                                Visibility="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.Items.IndexOf(.), Converter={x:Static ui:Converters.GreaterThanVisibility}, ConverterParameter=0}">
                                <ComboBox.Items>
                                    <x:Static Member="local:SqlLogicalOperator.AND" />
                                    <x:Static Member="local:SqlLogicalOperator.OR" />
                                </ComboBox.Items>
                            </ComboBox>

                            <!--  字段选择  -->
                            <ComboBox
                                Grid.Column="2"
                                DisplayMemberPath="DisplayName"
                                ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.Fields}"
                                SelectedValue="{Binding FieldName}"
                                SelectedValuePath="Name" />

                            <!--  操作符选择  -->
                            <ComboBox
                                Grid.Column="4"
                                ItemsSource="{Binding Operator, Converter={StaticResource SqlOperatorTypeToItemsConverter}}"
                                SelectedItem="{Binding Operator}" />

                            <!--  值输入框  -->
                            <ContentControl
                                Grid.Column="6"
                                Content="{Binding}">
                                <ContentControl.Resources>
                                    <!--  数字类型值  -->
                                    <DataTemplate DataType="{x:Type local:SqlWhereClauseItem}">
                                        <TextBox
                                            Text="{Binding Value, StringFormat=N2}"
                                            Visibility="{Binding Operator, Converter={x:Static ui:Converters.IsTypeVisibility}, ConverterParameter={x:Type local:NumberSqlOperator}}" />
                                    </DataTemplate>

                                    <!--  字符串类型值  -->
                                    <DataTemplate DataType="{x:Type local:SqlWhereClauseItem}">
                                        <TextBox
                                            Text="{Binding Value}"
                                            Visibility="{Binding Operator, Converter={x:Static ui:Converters.IsTypeVisibility}, ConverterParameter={x:Type local:StringSqlOperator}}" />
                                    </DataTemplate>

                                    <!--  日期类型值  -->
                                    <DataTemplate DataType="{x:Type local:SqlWhereClauseItem}">
                                        <DatePicker
                                            SelectedDate="{Binding Value}"
                                            Visibility="{Binding Operator, Converter={x:Static ui:Converters.IsTypeVisibility}, ConverterParameter={x:Type local:DateTimeOperator}}" />
                                    </DataTemplate>
                                </ContentControl.Resources>
                            </ContentControl>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--  添加条件按钮  -->
            <Button
                Margin="0,12,0,0"
                HorizontalAlignment="Left"
                Click="AddCondition_Click"
                Content="添加条件" />
        </StackPanel>
    </ScrollViewer>
</commondialog:CommonDialog>