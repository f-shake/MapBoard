<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="MapBoard.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:c="clr-namespace:MapBoard.Converters"
    xmlns:local="clr-namespace:MapBoard">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <c:InverseBoolConverter x:Key="InverseBoolConverter" />
            <Style TargetType="{x:Type Button}">
                <!--  规避临时BUG：https://github.com/dotnet/maui/issues/17642  -->
                <Setter Property="BackgroundColor" Value="{x:Null}" />
            </Style>
            <Style TargetType="{x:Type ImageButton}">
                <Setter Property="BackgroundColor" Value="{x:Null}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
