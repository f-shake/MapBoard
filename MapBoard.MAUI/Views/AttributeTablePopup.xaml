<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="MapBoard.Views.AttributeTablePopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:MapBoard;assembly=MapBoard.Core"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:mm="clr-namespace:MapBoard.Model;assembly=MapBoard.Model"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:MapBoard.ViewModels"
    x:DataType="vm:AttributeTableViewModel"
    HorizontalOptions="Fill"
    Color="Transparent">
    <toolkit:Popup.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    x:Name="appColors"
                    Source="../Resources/Styles/Colors.xaml" />
                <ResourceDictionary
                    x:Name="appStyles"
                    Source="../Resources/Styles/Styles.xaml" />

                <material:StyleResource
                    BasedOn="{x:Reference appStyles}"
                    ColorsOverride="{x:Reference appColors}" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </toolkit:Popup.Resources>
    <ContentView
        ControlTemplate="{StaticResource StandardPopupTemplate}"
        Loaded="ContentView_Loaded">
        <Grid RowDefinitions="Auto,8,*,8,Auto">
            <ScrollView
                x:Name="scrHeader"
                HorizontalOptions="Center"
                HorizontalScrollBarVisibility="Never"
                InputTransparent="True"
                Orientation="Horizontal">
                <Grid x:Name="gHeader" />
            </ScrollView>
            <ScrollView
                x:Name="scrTable"
                Grid.Row="2"
                HorizontalOptions="Center"
                Orientation="Both"
                Scrolled="scrTable_Scrolled">
                <Grid x:Name="gTable" />

            </ScrollView>
            <Grid
                x:Name="gViewButtons"
                Grid.Row="4"
                Margin="8"
                ColumnDefinitions="*,8,*">
                <Button
                    Grid.Column="2"
                    Clicked="CancelButton_Clicked"
                    Text="关闭" />
            </Grid>
        </Grid>
    </ContentView>
</toolkit:Popup>
