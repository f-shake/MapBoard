<Application
    x:Class="MapBoard.Main.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:MapBoard.Main.UI.Converter"
    xmlns:converters="clr-namespace:FzLib.WPF.Converters;assembly=FzCoreLib.Windows"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Exit="Application_Exit"
    Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <ResourceDictionary Source="UI/PathIcons.xaml" />
                <ResourceDictionary Source="UI/Converter/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style BasedOn="{StaticResource DefaultTextBoxStyle}" TargetType="{x:Type TextBox}">
                <Setter Property="Padding" Value="8,2,6,1" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>