                                    </Path.Fill>
                                </Path>
                                <Path
                                    x:Name="crossLine1"
                                    Data="F1 M 14.880859,4.563477 L 9.726563,9.718750 L 14.880859,14.873047"
                                    Stroke="#ff919191"
                                    StrokeMiterLimit="1.000000"
                                    StrokeThickness="1.500000" />
                                <Path
                                    x:Name="crossLine2"
                                    Data="F1 M 4.560547,4.568359 L 9.714844,9.723633 L 4.560547,14.877930"
                                    Stroke="#ff919191"
                                    StrokeMiterLimit="1.000000"
                                    StrokeThickness="1.500000" />
