                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="{x:Type Thumb}" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="Transparent"
                            CornerRadius="2">
                            <TextBlock
                                Width="Auto"
                                Margin="1,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Arial"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="Black"
                                Text="{TemplateBinding Tag}"
                                TextAlignment="Left" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <Border
            x:Name="Container"
            Margin="12"
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            CornerRadius="3">
            <Border.BitmapEffect>
                <DropShadowBitmapEffect
                    Direction="320"
                    Opacity="0.5"
                    ShadowDepth="2"
                    Softness="0.5"
                    Color="Black" />
            </Border.BitmapEffect>
            <StackPanel>
                <Border Padding="0,0">
                    <Border>
                        <StackPanel>
                            <Grid Background="Transparent">
                                <Border
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    BorderThickness="0">
                                    <StackPanel
                                        Width="225"
                                        Height="Auto"
                                        Margin="0,0,0,8"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <Border
                                                x:Name="borderColorChart"
                                                Width="174"
                                                Height="138"
                                                Margin="10,10,0,0"
                                                VerticalAlignment="Top">
                                                <Grid>
                                                    <Image
                                                        MouseDown="Image_MouseDown"
                                                        MouseMove="Image_MouseMove"
                                                        Stretch="None">
                                                        <Image.Source>
                                                            <BitmapImage UriSource="colorChart.PNG" />
                                                        </Image.Source>
                                                    </Image>
                                                    <Ellipse
                                                        x:Name="colorMarker"
                                                        Width="12"
                                                        Height="12"
                                                        Stroke="Brown"
                                                        StrokeThickness="2" />
                                                </Grid>
                                            </Border>
                                            <Border>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border
                                                        x:Name="brightnessSliderBorder"
                                                        Width="15"
                                                        Height="138"
                                                        Margin="8,10,0,0"
                                                        VerticalAlignment="Top"
                                                        Background="{DynamicResource BrightnessGradient}" />
                                                    <Slider
                                                        x:Name="brightnessSlider"
                                                        Width="9.5"
                                                        Height="148"
                                                        Margin="0,5,0,0"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Focusable="False"
                                                        IsMoveToPointEnabled="True"
                                                        Maximum="1.0"
                                                        Minimum="0.0"
                                                        Orientation="Vertical"
                                                        Style="{DynamicResource SliderStyle}" />
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Height="76" Orientation="Horizontal">
                                            <Border
                                                x:Name="currentColorBorder"
                                                Width="82"
                                                Height="50"
                                                Margin="10,0,25,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Bottom"
                                                Background="#FF808080"
                                                BorderBrush="Black"
                                                BorderThickness="0" />
                                            <StackPanel Width="90" Orientation="Vertical">
                                                <Button
                                                    x:Name="OK"
                                                    Width="70"
                                                    Margin="20,10,0,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Click="Ok_Click"
                                                    Content="确定" />
                                                <Button
                                                    x:Name="Cancel"
                                                    Width="70"
                                                    Margin="20,5,0,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Click="Cancel_Click"
                                                    Content="取消" />
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Border>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>