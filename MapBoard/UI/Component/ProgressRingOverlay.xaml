<UserControl
    x:Class="MapBoard.Main.UI.Component.ProgressRingOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:FzLib.UI.Converter;assembly=FzUILib.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MapBoard.Main.UI.Component"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    d:DesignHeight="450" d:DesignWidth="800"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <converter:Bool2VisibilityConverter x:Key="b2vc" />
        </Grid.Resources>
        <Border
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            Opacity="0.5"
            Visibility="{Binding IsActive, Converter={StaticResource b2vc}}" />

        <ui:ProgressRing
            x:Name="loading" Width="60"
            Height="60"
            IsActive="{Binding IsActive}"
            IsHitTestVisible="False" />
    </Grid>
</UserControl>