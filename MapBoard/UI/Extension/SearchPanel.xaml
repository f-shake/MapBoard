<common:UserControlBase
    x:Class="MapBoard.Main.UI.Extension.SearchPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:MapBoard.Common;assembly=MapBoard.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MapBoard.Main.UI.Extension"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:util="clr-namespace:MapBoard.Main.Util"
    d:DesignHeight="450" d:DesignWidth="800"
    Background="{DynamicResource SystemControlForegroundChromeMediumBrush}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:IndexConverter x:Key="IndexConverter" />
    </UserControl.Resources>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="96" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ComboBox
                HorizontalAlignment="Stretch"
                ui:ControlHelper.Header="搜索引擎"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Source={x:Static util:ExtensionUtility.PoiEngines}}"
                SelectedItem="{Binding SelectedPoiEngine}" />
            <TextBox
                Grid.Column="2"
                VerticalContentAlignment="Center"
                ui:ControlHelper.Header="关键词"
                PreviewKeyDown="TextBox_PreviewKeyDown"
                Text="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                x:Name="btnSearch" Grid.Column="4"
                VerticalAlignment="Stretch"
                Click="SearchButton_Click">
                <ui:FontIcon Glyph="&#xE721;" />
            </Button>
        </Grid>
        <ui:SimpleStackPanel
            Grid.Row="2" Orientation="Horizontal"
            Spacing="12">

            <RadioButton
                x:Name="rbtnAround" Margin="0,0,-72,0"
                VerticalAlignment="Center" Content="周边" />
            <ComboBox
                Width="88" Padding="0"
                VerticalAlignment="Center"
                IsEditable="True"
                Text="{Binding Radius}">
                <sys:Int32>100</sys:Int32>
                <sys:Int32>500</sys:Int32>
                <sys:Int32>1000</sys:Int32>
                <sys:Int32>5000</sys:Int32>
                <sys:Int32>10000</sys:Int32>
                <sys:Int32>20000</sys:Int32>
                <sys:Int32>50000</sys:Int32>
            </ComboBox>
            <TextBlock VerticalAlignment="Center">米</TextBlock>
            <RadioButton x:Name="rbtnRange" IsChecked="True">视图范围</RadioButton>
        </ui:SimpleStackPanel>
        <ListView
            Grid.Row="4" Grid.ColumnSpan="99"
            ItemsSource="{Binding SearchResult}"
            SelectedItem="{Binding SelectedPoi}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn DisplayMemberBinding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource IndexConverter}}" Header="序号" />
                        <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="地名" />
                        <GridViewColumn DisplayMemberBinding="{Binding Address}" Header="地址" />
                        <GridViewColumn DisplayMemberBinding="{Binding Type}" Header="类型" />

                        <GridViewColumn DisplayMemberBinding="{Binding Distance, StringFormat={}{0:0m}}" Header="距离" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <Button
            Grid.Row="6" HorizontalAlignment="Right"
            Click="ClearSearchButton_Click"
            Content="清除" />
        <TextBlock
            Grid.Row="6" HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <Run>共</Run>
            <Run Text="{Binding SearchResult.Count, Mode=OneWay}" />
            <Run>条搜索结果</Run>
        </TextBlock>
    </Grid>
</common:UserControlBase>